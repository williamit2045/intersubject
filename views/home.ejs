<%- include('./partials/header', { title: 'Intersubject | Where the individual meets the group' }) %>
<%- include('./partials/nav') %>


<main class="home-main">
  <!-- HERO -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <h1>INTERSUBJECT</h1>
        <h2>Where the individual meets the group</h2>

        <div class="vision-deck">
          <div class="vision-card">Express what is true for you.</div>
          <div class="vision-card">Add to cohort representation.</div>
          <div class="vision-card">See the group reflect itself.</div>
          <div class="vision-card">Shared awareness grows from participation.</div>
          <div class="vision-card">Feel part of a larger whole.</div>

          <div class="hero-cta">
            <button class="cta-button about-primary toggle-btn" data-section="register" style="margin-top: 2rem;">Register</button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- REGISTRATION OVERLAY (unchanged fields) -->
  <div class="overlay overlay-form" id="register" aria-hidden="true">
    <div class="form-content" role="dialog" aria-modal="true" aria-labelledby="register-title">
      <h2 id="register-title">Create your account</h2>

      <form action="/auth/register" method="POST">
        <div class="form-group">
          <label for="new-username">Username</label>
          <input type="text" id="new-username" name="username" required placeholder="Choose a unique username">
        </div>

        <div class="form-group">
          <label for="new-password">Password</label>
          <input type="password" id="new-password" name="password" required placeholder="Create a secure password">
        </div>

        <div class="form-group">
          <label for="email">Email (optional)</label>
          <input type="email" id="email" name="email" placeholder="For recovery only">
        </div>

        <hr>

        <p class="register-help">
          Optional details seed early cohorts. You can return anytime. Free-text fields create expressions.
        </p>

        <div class="demographic-section">
          <h4 class="section-heading">Demographic</h4>

          <div class="form-group">
            <label>Age Range</label>
            <select name="demographic[age]">
              <option value="">-- select --</option>
              <option value="Under 18">Under 18</option>
              <option value="18–24">18–24</option>
              <option value="25–34">25–34</option>
              <option value="35–44">35–44</option>
              <option value="45–54">45–54</option>
              <option value="55–64">55–64</option>
              <option value="65+">65+</option>
            </select>
          </div>

          <div class="form-group">
            <label>Gender Identity</label>
            <select name="demographic[gender]">
              <option value="">-- select --</option>
              <option value="Woman">Woman</option>
              <option value="Man">Man</option>
              <option value="Nonbinary">Nonbinary</option>
              <option value="Transgender">Transgender</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label>Ethnic or Cultural Background</label>
            <select name="demographic[ethnicity]">
              <option value="">-- select --</option>
              <option value="Black">Black</option>
              <option value="Hispanic">Hispanic</option>
              <option value="White">White</option>
              <option value="Middle Eastern">Middle Eastern</option>
              <option value="South Asian">South Asian</option>
              <option value="East Asian">East Asian</option>
              <option value="Indigenous">Indigenous</option>
              <option value="Mixed">Mixed</option>
            </select>
          </div>

          <div class="form-group">
            <label>Country/Region</label>
            <input type="text" name="demographic[region]" placeholder="e.g., Jordan, Thailand, Nigeria">
          </div>

          <div class="form-group">
            <label>Languages</label>
            <input type="text" name="demographic[languages]" placeholder="e.g., English, Spanish">
          </div>

          <div class="form-group">
            <label>Religious or Spiritual Identity</label>
            <select name="demographic[religion]">
              <option value="">-- select --</option>
              <option value="Christian">Christian</option>
              <option value="Muslim">Muslim</option>
              <option value="Hindu">Hindu</option>
              <option value="Buddhist">Buddhist</option>
              <option value="Jewish">Jewish</option>
              <option value="Spiritual but not religious">Spiritual but not religious</option>
              <option value="Agnostic">Agnostic</option>
              <option value="Atheist">Atheist</option>
            </select>
          </div>

          <div class="form-group">
            <label>Education</label>
            <select name="demographic[education]">
              <option value="">-- select --</option>
              <option value="No formal education">No formal education</option>
              <option value="High school">High school</option>
              <option value="Some college">Some college</option>
              <option value="Bachelor's degree">Bachelor's degree</option>
              <option value="Master's degree">Master's degree</option>
              <option value="Doctorate">Doctorate</option>
              <option value="Trade/Technical training">Trade/Technical training</option>
            </select>
          </div>

          <div class="form-group">
            <label>Occupation or Field</label>
            <input type="text" name="demographic[occupation]" placeholder="e.g., mental health counselor, farmer, poet">
          </div>

          <h4 class="section-heading">Optional additions</h4>

          <div class="form-group">
            <label>Political Alignment (optional)</label>
            <input type="text" name="demographic[politics]" placeholder="e.g., Progressive, Centrist, Post-left">
          </div>

          <div class="form-group">
            <label>Sexual Orientation (optional)</label>
            <input type="text" name="demographic[orientation]" placeholder="e.g., Gay, Bisexual">
          </div>
        </div>

        <button type="submit" class="about-primary" style="width:100%; border:none; border-radius:6px; padding:0.8rem 1rem; font-weight:600; color:#fff; background:#6d5dfc;">Create Account</button>
      </form>

      <div class="login-option">
        <p>Already have an account? <button class="text-btn toggle-btn" data-section="login">Log in</button></p>
      </div>
    </div>
  </div>
</main>

<script src="/js/auth.js"></script>
<script src="/js/home.js"></script>

<%- include('./partials/footer') %>

<!-- Page-specific styles aligned with About -->
<style>
  .home-main {
    background: #f8f9fa;
    color: #2e2e2e;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    padding-bottom: 2.5rem;
  }

  .hero { margin-top: 6rem; padding: 0 1rem; }
  .hero-container { max-width: 900px; margin: 0 auto; }
  .hero-content h1 { font-size: 2.4rem; color: #1c1c1c; font-weight: 700; letter-spacing: .02em; }
  .hero-content h2 { font-size: 1.15rem; color: #555; font-weight: 600; margin-top: .4rem; }

  .vision-deck { padding: 1.25rem 0; margin: 1rem 0; display: flex; flex-direction: column; align-items: center; gap: .5rem; }
  .vision-card{
    width: 100%;
    max-width: 400px;
    background:#fff;
    color:#2e2e2e;
    border:1px solid #e6e9ef;
    border-left:4px solid #6d5dfc;
    border-radius:10px;
    padding:.8rem 1.1rem;
    font-size:1.02rem;
    font-weight:600;
    line-height:1.55;
    box-shadow:0 1px 6px rgba(17,24,39,.06);
    transition:transform .16s ease, box-shadow .16s ease, background .16s ease;
  }
  .vision-card:hover{ background:#f1f3ff; transform:translateY(-2px); box-shadow:0 6px 18px rgba(109,93,252,.18); }

  .hero-cta{ display:flex; justify-content:center; margin-top:.5rem; }
  .about-primary{
    background:#6d5dfc; color:#fff; border:none; border-radius:6px;
    padding:.7rem 1.4rem; font-size:1rem; font-weight:600; transition:all .25s ease; min-width:180px;
  }
  .about-primary:hover{ background:#5948e5; transform:translateY(-2px); box-shadow:0 4px 10px rgba(109,93,252,.25); }

  @media (max-width: 768px){
    .hero { margin-top: 2rem; }
    .hero-container { padding: 0 1rem; }
    .vision-card { max-width: 100%; }
    .about-primary { width: 100%; }
  }
</style>
